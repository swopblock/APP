<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP.Views.SliderTrade">
    <VerticalStackLayout x:Name="SliderButton" HorizontalOptions="FillAndExpand">
        <Grid>
            <GraphicsView ZIndex="10" HorizontalOptions="FillAndExpand" VerticalOptions="Center" HeightRequest="100" DragInteraction="GraphicsView_DragInteraction"></GraphicsView>
            <Rectangle Fill="Black" Stroke="{StaticResource Gray27}" HeightRequest="50" RadiusX="25" RadiusY="25" HorizontalOptions="FillAndExpand" VerticalOptions="Center"></Rectangle>
            <ImageButton ZIndex="4" x:Name="ImgFinger" VerticalOptions="Center" HeightRequest="20" WidthRequest="20" Source="threebar.png"/>
            <Grid>
                <Rectangle x:Name="FingerButton" ZIndex="8" Fill="white" HeightRequest="50" WidthRequest="50" RadiusX="25" RadiusY="25" HorizontalOptions="Center" VerticalOptions="Center">

                </Rectangle>
                <Label ZIndex="4" Margin="20,0,0,0" FontSize="11" Text="Sell" VerticalOptions="Center" HorizontalOptions="Start"/>
                <Label ZIndex="4" Margin="0,0,20,0" FontSize="11" Text="Buy" VerticalOptions="Center" HorizontalOptions="End" />
            </Grid>
        </Grid>
    </VerticalStackLayout>
</ContentView>
