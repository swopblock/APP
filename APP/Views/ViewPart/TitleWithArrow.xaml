<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP.Views.TitleWithArrow">
    <VerticalStackLayout ZIndex="100000" VerticalOptions="Start" HeightRequest="40" HorizontalOptions="Fill" Margin="0,0,10,10">
        <Grid VerticalOptions="Center" HorizontalOptions="Start">
            <Grid WidthRequest="400">
                <Button
                    x:Name="buttonX"
                Pressed="Button_Pressed"
                TextColor="{StaticResource White}"
                Text=""
                VerticalOptions="Fill"
                HorizontalOptions="Fill" />
                
            </Grid>
            <Path WidthRequest="30" TranslationX="30" TranslationY="-5" HeightRequest="30" Margin="0,0,0,0"  Data="M 7,14 l -7,7 l 7,7" Stroke="{StaticResource Gray54}" HorizontalOptions="Start" VerticalOptions="Center" />
        </Grid>
    </VerticalStackLayout>
</ContentView>
