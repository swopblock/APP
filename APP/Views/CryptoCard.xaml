<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP.Views.CryptoCard"
             xmlns:controls="clr-namespace:APP.Views">
    <StackLayout x:Name="ContainerForGrids" HorizontalOptions="Center">
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <controls:RoundBox ZIndex="10"></controls:RoundBox>
            <Grid x:Name="gridCrypto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="3" FontSize="15" VerticalTextAlignment="Center" Grid.Row="0" Text="BTC"/>
                <Label Grid.Column="3" FontSize="20" VerticalTextAlignment="Center" Grid.Row="1" Text="$"/>
                <Label Grid.Column="3" FontSize="12" VerticalTextAlignment="Center" Grid.Row="2" Text="Change"/>
                <Image VerticalOptions="Center" WidthRequest="40" Grid.Column="0" Source="bitcoin.png"/>

                <Path></Path>
                <Path></Path>
                <Path></Path>
                <controls:TimePeriodLabels ></controls:TimePeriodLabels>
            </Grid>
        </Grid>
    </StackLayout>
</ContentView>
