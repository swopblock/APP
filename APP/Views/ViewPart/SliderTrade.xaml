<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP.Views.SliderTrade">
    <VerticalStackLayout HorizontalOptions="FillAndExpand"  Margin="20">
        <Grid>
        <Rectangle Stroke="white" HeightRequest="50" RadiusX="25" RadiusY="25" HorizontalOptions="FillAndExpand" VerticalOptions="Center"></Rectangle>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Rectangle Grid.Column="1" Fill="white" HeightRequest="50" WidthRequest="50" RadiusX="25" RadiusY="25" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"></Rectangle>
                <Image HeightRequest="25" Grid.Column="1" Source="threebar.png"/>
                <Label FontSize="11" Text="Sell" VerticalOptions="Center" HorizontalOptions="Center" Grid.Row="0" Grid.Column="0"/>
            <Label FontSize="11" Text="Buy" VerticalOptions="Center" HorizontalOptions="Center" Grid.Row="0" Grid.Column="2"/>
        </Grid>
    </Grid>
    </VerticalStackLayout>
</ContentView>
