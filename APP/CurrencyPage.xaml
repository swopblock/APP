<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP.CurrencyPage"
             Title="CurrencyPage"
             xmlns:controls="clr-namespace:APP.Views">
    <VerticalStackLayout>
        <ScrollView HeightRequest="540">
            <VerticalStackLayout>
            <Label HorizontalOptions="Center" FontSize="24" VerticalOptions="Center" Margin="0,40,0,40" x:Name="CurrencyLabel" Text="Currency"></Label>
                <VerticalStackLayout x:Name="CurrencyContainer">
                </VerticalStackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="80"></ColumnDefinition>
                </Grid.ColumnDefinitions>
            
                <Grid WidthRequest="30" HeightRequest="30" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="1">
                  <!--<Border>-->
                    <Path TranslationX="27" TranslationY="28" VerticalOptions="Center" HorizontalOptions="Center" Scale="2.5" Fill="{StaticResource Gray2F}" Data="M8.27 3.39L 8.73 5.69L 11.02 6.15L 8.73 6.6L 8.27 8.9L 7.81 6.6L 5.51 6.15L 7.81 5.69L 8.27 3.39z"></Path>
                <!--</Border>-->
                    </Grid>
            
                <Rectangle  VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="2" WidthRequest="10" HeightRequest="10" RadiusX="3" StrokeThickness="1.7" Stroke="{StaticResource Gray2F}"></Rectangle>
                <Rectangle  VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="3" WidthRequest="10" HeightRequest="10" RadiusX="3" StrokeThickness="1.7" Stroke="{StaticResource Gray2F}"></Rectangle>
                <Rectangle  VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="4" WidthRequest="10" HeightRequest="10" RadiusX="3" StrokeThickness="1.7" Stroke="{StaticResource Gray2F}"></Rectangle>
                <!--<Label Text="+" Grid.Column="1" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center"></Label>
                <Label Text="o" Grid.Column="2" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center"></Label>
                <Label Text="o" Grid.Column="3" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center"></Label>
                <Label Text="o" Grid.Column="4" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center"></Label>-->
            </Grid>
                <Grid>
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Margin="3">Your</Label>
                        <Label x:Name="CurencyNameBelow" Text="Currency" Margin="3"></Label>
                    </HorizontalStackLayout>
                </Grid>
                <Grid Margin="5,40,5,10" HeightRequest="370">
                    <VerticalStackLayout>
                    <Grid HorizontalOptions="Center" VerticalOptions="Start">
                        <Rectangle Fill="{StaticResource Gray27}" HeightRequest="175" WidthRequest="340" RadiusX="40"></Rectangle>
                            <StackLayout>
                                <Grid Margin="25" HeightRequest="25">
                                    <Label>Quantity</Label>
                                    <Label HorizontalOptions="End">0.37323943 BTC</Label>
                                    <BoxView Margin="0,50,0,0" Color="{StaticResource Gray2F}" HeightRequest="1" HorizontalOptions="FillAndExpand" />
                                </Grid>
                                <Grid Margin="25,0,25,0" HeightRequest="25">
                                    <Label>Value</Label>
                                    <Label HorizontalOptions="End">$8,450.34</Label>
                                    <BoxView Margin="0,50,0,0" Color="{StaticResource Gray2F}" HeightRequest="1" HorizontalOptions="FillAndExpand" />
                                </Grid>
                                <Grid Margin="25" HeightRequest="25">
                                    <Label>Avg Cost</Label>
                                    <Label HorizontalOptions="End">$26,490.44</Label>
                                </Grid>
                            </StackLayout>
                        </Grid>
                    <Grid>
                        <Grid Margin="5" HorizontalOptions="StartAndExpand" VerticalOptions="EndAndExpand">
                                <Rectangle Fill="{StaticResource Gray27}" VerticalOptions="FillAndExpand" HeightRequest="170" WidthRequest="167.5" HorizontalOptions="FillAndExpand" RadiusX="40"></Rectangle>
                                <controls:PercentCircle x:Name="Diversity" Margin="0,0,0,30"></controls:PercentCircle>
                                <Label FontSize="14" VerticalOptions="End" HorizontalOptions="Center" Margin="0,0,0,40">Wallet Diversity</Label>
                        </Grid>
                        <Grid  Margin="5" HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand">
                                <Rectangle Fill="{StaticResource Gray27}"  HorizontalOptions="FillAndExpand" HeightRequest="170" WidthRequest="167.5" VerticalOptions="Fill" RadiusX="40"></Rectangle>
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <VerticalStackLayout Margin="0,0,0,10" WidthRequest="130">
                                        <Label FontSize="14">Today's Return</Label>
                                        <Grid VerticalOptions="Center">
                                            <HorizontalStackLayout>
                                                <Path x:Name="ValueUp" Margin="3" WidthRequest="10" Data="M0,0l-4.5,-7.5l-4.5,7.5Z" Stroke="{StaticResource White}"  />
                                                <Label FontSize="14" TextColor="White" Margin="10,0,10,0" HorizontalOptions="Center">$200 / </Label>
                                                <Label FontSize="14" TextColor="White" HorizontalOptions="End">3.25%</Label>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </VerticalStackLayout>
                                    <VerticalStackLayout>
                                        <Label FontSize="14">Total Return</Label>
                                        <Grid>
                                            <HorizontalStackLayout>
                                                <Path x:Name="ValueUpTotal" Margin="3" WidthRequest="10" Data="M0,0l-4.5,-7.5l-4.5,7.5Z" Stroke="{StaticResource White}"  />
                                                <Label FontSize="14" TextColor="White" Margin="10,0,10,0" HorizontalOptions="Center">$200 /</Label>
                                                <Label FontSize="14" TextColor="White" HorizontalOptions="End">3.25%</Label>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Grid>
                    </Grid>
                    </VerticalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
        <BoxView Margin="0,0,0,0" Color="{StaticResource Gray2F}" HeightRequest="0.5" HorizontalOptions="FillAndExpand" />

        <Grid Margin="0,20,0,10">
            <controls:BottomThreeButtons BindingContext="currency"></controls:BottomThreeButtons>
        </Grid>
    </VerticalStackLayout>
</ContentPage>