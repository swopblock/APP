<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP.Views.TitleWithExit"
             Shell.FlyoutHeight="0">
    <VerticalStackLayout ZIndex="100000" VerticalOptions="Start" HeightRequest="40" HorizontalOptions="Fill" Margin="0,0,10,10">
        <Grid VerticalOptions="Center" HorizontalOptions="Start">
            <Grid WidthRequest="400">
                <Button
                Pressed="Button_Pressed"
                TextColor="{StaticResource White}"
                Text="Order details"
                VerticalOptions="Fill" 
                HorizontalOptions="Fill" />
            </Grid>
            <Path HorizontalOptions="End" Scale="1.4" TranslationX="-20" TranslationY="27" Data="M 0,0l10,10M10,0l-10,10" Stroke="{StaticResource White}"></Path>
        </Grid>
    </VerticalStackLayout>
</ContentView>
