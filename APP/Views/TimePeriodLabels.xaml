<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP.Views.TimePeriodLabels">
    <VerticalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"></ColumnDefinition>
                <ColumnDefinition Width="70"></ColumnDefinition>
                <ColumnDefinition Width="70"></ColumnDefinition>
                <ColumnDefinition Width="70"></ColumnDefinition>
                <ColumnDefinition Width="70"></ColumnDefinition>
                <ColumnDefinition Width="70"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" TextColor="White">Live</Label>
            <Label Grid.Row="0" Grid.Column="1" TextColor="White">Today</Label>
            <Label Grid.Row="0" Grid.Column="2" TextColor="White">1W</Label>
            <Label Grid.Row="0" Grid.Column="3" TextColor="White">1M</Label>
            <Label Grid.Row="0" Grid.Column="4" TextColor="White">3M</Label>
            <Label Grid.Row="0" Grid.Column="5" TextColor="White">1Y</Label>
        </Grid>
    </VerticalStackLayout>
</ContentView>
