<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP.Views.ValueList">
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding ItemsList}" x:Name="ListViewContainer" HorizontalOptions="FillAndExpand" Margin="10" VerticalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout>
                                <Label Grid.Column="0" HorizontalTextAlignment="Start" Text="{Binding LabelText}"></Label>
                                <Label Grid.Column="1" HorizontalTextAlignment="End" Text="{Binding ValueText}"></Label>
                            </VerticalStackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentView>
